{
  "name": "@trace/client",
  "engines": {
    "npm": "please-use-bun",
    "pnpm": "please-use-bun",
    "yarn": "please-use-bun",
    "bun": ">= 1.0.4",
    "node": ">= 16.0.0"
  },
  "private": true,
  "scripts": {
    "clean": "bunx rimraf node_modules **/node_modules bun.* **/bun.* **/dist/*",
    "generate": "nuxt generate",
    "dev": "run-p dev:support dev:finder dev:core dev:portal dev:manager",
    "dev:support": "cd apps/support && bun dev",
    "dev:core": "cd apps/core && bun dev",
    "dev:finder": "cd apps/finder && bun dev",
    "dev:portal": "cd apps/portal && bun dev",
    "dev:manager": "cd apps/manager && bun dev",
    "build": "run-p build:support build:core",
    "build:support": "bun generate --cwd apps/support",
    "build:core": "bun generate --cwd apps/core && cp -r apps/core/dist/. apps/support/dist/core/"
  },
  "devDependencies": {
    "bun-types": "latest",
    "npm-run-all2": "^6.1.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "packages/*",
    "base-app",
    "apps/*"
  ]
}
